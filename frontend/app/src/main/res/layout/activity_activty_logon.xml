<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activty_logon"
    android:layout_gravity="center_horizontal"
    android:padding="24dp"
    android:background="#F1F0E8" >

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="BEGIN"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </HorizontalScrollView>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Cadastro de"
           android:textSize="36sp"
           android:textAlignment="center"
           android:textStyle="bold"
           android:textColor="@color/black"
          />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Voluntário"
           android:textSize="36sp"
           android:textAlignment="center"
           android:textStyle="bold"
           android:textColor="@color/black" />

       <EditText
           android:id="@+id/logon_username"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginTop="40dp"
           android:background="@drawable/rounded_input"
           android:drawableLeft="@drawable/username_icon"
           android:drawablePadding="8dp"
           android:hint="Username"
           android:padding="8dp"
           android:textColor="#4A55A2" />

       <EditText
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:id="@+id/logon_name"
           android:background="@drawable/rounded_input"
           android:layout_marginTop="10dp"
           android:padding="8dp"
           android:hint="Nome"
           android:drawablePadding="8dp"
           android:textColor="#4A55A2"
           android:drawableLeft="@drawable/name_icon"/>
       <EditText
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:id="@+id/logon_password"
           android:background="@drawable/rounded_input"
           android:layout_marginTop="20dp"
           android:padding="8dp"
           android:hint="Senha"
           android:inputType="textPassword"
           android:drawablePadding="8dp"
           android:textColor="#4A55A2"
           android:drawableLeft="@drawable/password_icon"/>
       <EditText
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:id="@+id/logon_confirmePassword"
           android:background="@drawable/rounded_input"
           android:layout_marginTop="20dp"
           android:padding="8dp"
           android:hint="Confirmar Senha"
           android:inputType="textPassword"
           android:drawablePadding="8dp"
           android:textColor="#4A55A2"
           android:drawableLeft="@drawable/password_icon"/>

       <Button
           android:id="@+id/login_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="30dp"
           android:layout_gravity="center"
           android:paddingRight="50dp"
           android:paddingLeft="50dp"
           android:backgroundTint="#4682A9"
           android:text="Login"
           android:textSize="18sp"
           app:cornerRadius="20dp" />

       <TextView
           android:id="@+id/signinRedirectText"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_margin="49dp"
           android:text="Já possui conta? Conecte-se"
           android:textColor="#4A55A2"
           android:textSize="18sp" />
   </LinearLayout>

</LinearLayout>