<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".InicialRefugiado"
    android:background="#F1F0E8">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchBar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/secaoAbrigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rounded_edittext_searchbar"
                android:backgroundTint="#91C8E4"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAbrigo"
                    android:layout_width="253dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="#91C8E4"
                    android:paddingStart="25dp"
                    android:text="Abrigo"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="23dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="20dp"
                    android:src="@drawable/casaicon" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/secaoAlimentacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rounded_edittext_searchbar"
                android:backgroundTint="#94ADD7"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAlimentacao"
                    android:layout_width="253dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="#94ADD7"
                    android:paddingStart="25dp"
                    android:text="Alimentacao"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="23dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="20dp"
                    android:src="@drawable/icon_alimentacao" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secaoAssistMedica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rounded_edittext_searchbar"
                android:backgroundTint="#749BC2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAssistMedica"
                    android:layout_width="253dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="#749BC2"
                    android:paddingStart="25dp"
                    android:text="Assistencia Médica"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="23dp"
                    android:textStyle="bold"  />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="20dp"
                    android:src="@drawable/frame__2_" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secaoDoacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rounded_edittext_searchbar"
                android:backgroundTint="#4A7FB5"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDoacao"
                    android:layout_width="253dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="#4A7FB5"
                    android:paddingStart="25dp"
                    android:text="Fazer Doação"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="23dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="20dp"
                    android:src="@drawable/frame__1_" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secaoVoluntarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:background="@drawable/rounded_edittext_searchbar"
                android:backgroundTint="#4682A9"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnVoluntario"
                    android:layout_width="253dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="#4682A9"
                    android:paddingStart="25dp"
                    android:text="Suas Conexões"
                    android:textAlignment="textStart"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="20dp"
                    android:src="@drawable/username_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secaoConexaoVoluntarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rounded_edittext_searchbar"
                android:backgroundTint="#4682A9"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnConectaVol"
                    android:layout_width="253dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="#4682A9"
                    android:paddingStart="25dp"
                    android:text="Conecte-se com Voluntários"
                    android:textAlignment="textStart"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="20dp"
                    android:src="@drawable/solicitacao_icon" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/txtLogo"
        android:layout_width="92dp"
        android:layout_height="51dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:text="Begin"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/imgLogo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="69dp"
        android:layout_height="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_1" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnPerfilRefugiado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        app:backgroundTint="#C9CCD5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/username_icon" />

    <SearchView
        android:id="@+id/searchBar"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded_input"
        android:hint="Search.."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>