<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true"
android:background="#F1F0E8"
android:padding="24dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="105dp"
            android:layout_height="43dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="250dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023"
            app:srcCompat="@drawable/logo" />
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:text="Cadastro de Refugiado"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/cadastro_usernameRef"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_input"
            android:drawableLeft="@drawable/username_icon"
            android:drawablePadding="8dp"
            android:layout_marginTop="20dp"
            android:hint="Username"
            android:padding="8dp"
            android:textColor="#4A55A2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.296" />

        <EditText
            android:id="@+id/cadastro_NomeRef"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_input"
            android:drawableLeft="@drawable/name_icon"
            android:drawablePadding="8dp"
            android:hint="Nome"
            android:padding="8dp"
            android:textColor="#4A55A2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cadastro_usernameRef"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/cadastro_IdiomasRef"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_input"
            android:drawableLeft="@drawable/icon_idioma"
            android:drawablePadding="8dp"
            android:hint="Idiomas"
            android:padding="8dp"
            android:textColor="#4A55A2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cadastro_NomeRef"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/cadastro_senhaRef"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/rounded_input"
            android:drawableLeft="@drawable/password_icon"
            android:drawablePadding="8dp"
            android:hint="Senha"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="#4A55A2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cadastro_IdiomasRef" />

        <EditText
            android:id="@+id/cadastro_confSenhaRef"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/rounded_input"
            android:drawableLeft="@drawable/password_icon"
            android:drawablePadding="8dp"
            android:hint="Confirme a senha"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="#4A55A2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cadastro_senhaRef" />

        <EditText
            android:id="@+id/cadastro_paisOrigem"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_input"
            android:drawableLeft="@drawable/icon_mundo"
            android:drawablePadding="8dp"
            android:hint="País de origem"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="#4A55A2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cadastro_confSenhaRef" />

        <EditText
            android:id="@+id/cadastro_telefone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/rounded_input"
            android:drawableLeft="@drawable/icon_telefone"
            android:drawablePadding="8dp"
            android:hint="Telefone/ celular"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="#4A55A2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cadastro_paisOrigem" />

        <EditText
            android:id="@+id/cadastro_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/rounded_input"
            android:drawableLeft="@drawable/icon_email"
            android:drawablePadding="8dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColor="#4A55A2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cadastro_telefone" />
        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#4682A9"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_marginTop="20dp"
            android:text="Cadastrar"
            android:textSize="18sp"
            app:cornerRadius="40dp" />

        <TextView
            android:id="@+id/tvCadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="6dp"
            android:text="Já possui conta? Conecte-se"
            android:textColor="#4A55A2"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>
</ScrollView>
